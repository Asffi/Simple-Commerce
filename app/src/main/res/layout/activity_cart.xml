<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cartActivity"
    tools:context=".CartActivity">


    <TextView
        android:id="@+id/total_price_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@drawable/button_bg"
        android:text="Total price: "
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:textSize="30sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartList_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/total_price_textview"
        android:layout_above="@+id/proceed_btn"

        />
        <Button
            android:id="@+id/proceed_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Proceed"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:background="@drawable/cart_button_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            />


</RelativeLayout>